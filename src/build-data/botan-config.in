#!/bin/sh

#  For workspace builds:
#guess_prefix=`dirname $0`
#includedir=build/include
#libdir=

# For normal builds:
guess_prefix=`dirname \`dirname $0\``
includedir=@{var:includedir}
libdir=@{var:libdir}

install_prefix=@{var:prefix}
prefix=

usage()
{
    echo "botan-config [--prefix[=DIR]] [--version] [--libs] [--cflags]"
    exit 1
}

if test $# -eq 0; then
    usage
fi

if test `echo $guess_prefix | cut -c 1` = "/"; then
   prefix=$guess_prefix
else
   prefix=$install_prefix
fi

while test $# -gt 0; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
    esac
    case "$1" in
    --prefix=*)
        prefix=$optarg
        ;;
    --prefix)
        echo $prefix
        ;;
    --version)
        echo @{var:version}
        exit 0
        ;;
    --cflags)
        if [ $prefix != "/usr" -a $prefix != "/usr/local" ]
        then
           echo -I$prefix/$includedir
        fi
        ;;
    --libs)
        if [ $prefix != "/usr" -a $prefix != "/usr/local" ]
        then
           echo -n "-L$prefix/$libdir "
        fi

        echo @{var:link_to} -lbotan
        ;;
    *)
        usage
        ;;
    esac
    shift
done

exit 0
